<h1>注册</h1>

<% if @user.errors.any? %>
  <ul>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
<% end %>
</ul>
<% end %>

<%= form_for @user, url: :users_create do |f| %>
  <p> 
<%= f.label :用户名 %>
<%= f.text_field :name %>
</p>

<p>
<%= f.label :密码 %>
<%= f.password_field :password %>
</p>

<p>
<%= f.label :确认密码 %>
<%= f.password_field :password_confirmation %>
</p>

<p><%= f.button "提交" %></p>
          <% end %>

