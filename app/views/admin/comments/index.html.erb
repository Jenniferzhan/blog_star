<div id= comment>
  <h1>评论列表</h1></div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @comments.each do |comment| %>
    <tr>
    <td><%= comment.article.id%></td>
    <td><%= comment.article.title%></td>
    <td><%= comment.name %></td>
    <td><%= comment.body %></td>
    <td><%= comment.email %></td>
    <td><%= link_to '删除', admin_comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tr>
</tbody>
</table>

<br>
 </div>

